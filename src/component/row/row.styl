.row
  padding 10px 15px
  section
    .row__cell--multi-img
      display flex
      flex-direction column
      h3
        color #333
        line-height 1.25
      .img-list
        display flex
        margin 6px 0 2px 0
        > li
          flex 1 33.33333%
          height 2rem
          padding 0 1px
          img
            width 100%
            height 100%
    .row__cell--signle-img
      display flex
      flex-direction row
      h3
        color #333
        line-height 1.25
        flex 1 66.66667%
        height 1.6rem
        text-overflow clip
        overflow hidden
      .img-block
        flex 1 33.33333%
        height 2rem
        img
          width 100%
          height 100%
  .row__info
    font-size 12px
    color #666
    > span
      margin-right 4px
