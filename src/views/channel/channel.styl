.channel
  .channelBlock
    header
      padding: 0 .3rem
      line-height: 2em
      background-color: #f5f5f5
      font-size: 12px
      color: #666
    .channelList
      display flex
      flex-wrap wrap
      > li
        flex-basis 25%
        margin-bottom: .3rem
        a
          font-size: 16px
          display: block
          margin: 0 8px
          border: 1px solid #ccc
          text-align: center
          line-height: 2em
          text-decoration: none
          color: #131313
